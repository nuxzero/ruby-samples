<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<%# gravartar_for method has been definded in the app/helpers/users_helper.rb. %>
<%= gravatar_for @user, size: 200 %>
<div class="text-center mt-4">
  <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
</div>
<h3 class="text-center mt-4">Articles</h3>
<%# Pagination %>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%# Since _article.html.erb partial is located in different path. %>
<%# So you have to specify the path name in the prefix to refer to app/view/articles/_article.htnl.erb. %>
<%= render 'articles/article' %>
<%# Pagination %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>